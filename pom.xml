<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>band.full.testing.video</groupId>
  <artifactId>testing-video</artifactId>
  <version>0.0.3-SNAPSHOT</version>

  <name>TestingAV test-videos generator</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
    </dependency>
  </dependencies>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-enforcer-plugin</artifactId>
          <version>1.4.1</version>
        </plugin>
        <plugin>
          <artifactId>maven-assembly-plugin</artifactId>
          <version>2.5.3</version>
        </plugin>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.1</version>
          <configuration>
            <source>1.8</source>
            <target>1.8</target>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-failsafe-plugin</artifactId>
          <version>2.20</version>
        </plugin>
        <plugin>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.20</version>
        </plugin>
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>3.0.2</version>
          <executions>
            <execution>
              <id>default-jar</id>
              <phase>never</phase>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.5.2</version>
          <configuration>
            <skip>true</skip>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>2.8.2</version>
          <configuration>
            <skip>true</skip>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>build-helper-maven-plugin</artifactId>
          <version>3.0.0</version>
        </plugin>
        <!-- This plugin's configuration is used to store Eclipse m2e -->
        <!-- settings only. It has no influence on the Maven build itself. -->
        <plugin>
          <groupId>org.eclipse.m2e</groupId>
          <artifactId>lifecycle-mapping</artifactId>
          <version>1.0.0</version>
          <configuration>
            <lifecycleMappingMetadata>
              <pluginExecutions>
                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>build-helper-maven-plugin</artifactId>
                    <versionRange>[3.0.0,)</versionRange>
                    <goals><goal>bsh-property</goal></goals>
                  </pluginExecutionFilter>
                  <action><ignore/></action>
                </pluginExecution>
              </pluginExecutions>
            </lifecycleMappingMetadata>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <execution>
            <id>enforce-maven</id>
            <goals><goal>enforce</goal></goals>
            <configuration>
              <rules>
                <requireMavenVersion>
                  <version>[3.0,)</version>
                </requireMavenVersion>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-main</id>
            <phase>test</phase>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
            <configuration>
              <skipTests>${skipMain}</skipTests>
              <includes>
                <include>band/full/testing/video/generate/**/*.java</include>
              </includes>
              <groups>band.full.testing.video.executor.GenerateVideo</groups>
              <useFile>false</useFile>
              <systemPropertyVariables>
                <encoder.quick>${encoder.quick}</encoder.quick>
                <encoder.main>true</encoder.main>
              </systemPropertyVariables>
              <reportsDirectory>${project.build.directory}/main-reports</reportsDirectory>
            </configuration>
          </execution>
          <execution>
            <id>generate-lossless</id>
            <phase>test</phase>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
            <configuration>
              <skipTests>${skipLossless}</skipTests>
              <includes>
                <include>band/full/testing/video/generate/**/*.java</include>
              </includes>
              <groups>band.full.testing.video.executor.GenerateVideo</groups>
              <useFile>false</useFile>
              <systemPropertyVariables>
                <encoder.quick>${encoder.quick}</encoder.quick>
                <encoder.lossless>true</encoder.lossless>
              </systemPropertyVariables>
              <reportsDirectory>${project.build.directory}/lossless-reports</reportsDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>zip-main</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <skipAssembly>${skipMain}</skipAssembly>
              <descriptor>src/assembly/main.xml</descriptor>
              <finalName>${project.build.finalName}</finalName>
            </configuration>
          </execution>
          <execution>
            <id>zip-lossless</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <skipAssembly>${skipLossless}</skipAssembly>
              <descriptor>src/assembly/lossless.xml</descriptor>
              <finalName>${project.build.finalName}</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>negate-prop</id>
            <phase>initialize</phase>
            <goals>
              <goal>bsh-property</goal>
            </goals>
            <configuration>
              <source>
                props = project.getProperties();

                main = props.getProperty("main");
                skipMain = value == null ? false
                  : !Boolean.parseBoolean(main);

                lossless = props.getProperty("lossless");
                skipLossless = value == null ? false
                  : !Boolean.parseBoolean(lossless);
              </source>
              <properties>
                <property>skipMain</property>
                <property>skipLossless</property>
              </properties>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>main</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <main>true</main>
      </properties>
    </profile>
    <profile>
      <id>lossless</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <lossless>true</lossless>
      </properties>
    </profile>
    <profile>
      <id>quick</id>
      <!-- Useful for quick testing the build logic -->
      <!-- Cuts video time and quality to a minimum -->
      <!-- Videos produced will not be fully usable -->
      <properties>
        <encoder.quick>true</encoder.quick>
      </properties>
    </profile>
  </profiles>
</project>
